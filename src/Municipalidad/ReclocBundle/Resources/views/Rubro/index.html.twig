                    <td>{{ rubro.nombre }}</td>
                    <td>{{ rubro.fechacreado | date('Y-m-d H:i:s') }}</td>
                    <td>{{ rubro.fechaactualizado | date('Y-m-d H:i:s') }}</td>
                    <td><a href="{{ path('editar_rubro', { 'id' : rubro.id , 'id_servicio' : id_servicio }) }}">Editar</a>
