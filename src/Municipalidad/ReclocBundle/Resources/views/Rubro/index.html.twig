                        <a href="{{ path('index_institucion', { 'id_rubro' : rubro.id }) }}">Instituciones</a>
                    </td>
                        
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="6"> Total {{ rubros |length }}</td>
                </tr>

            </tfoot>
        </table>    
    

{% endblock %}
