{% extends "::base.html.twig" %}

{% block title %}Rubros{% endblock %}


{% block body %}
    <table id="tabla">
            <a href=" {{ path('nuevo_rubro', { 'id_servicio' : id_servicio}) }}">Nuevo Rubro</a>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha Creado</th>
                    <th>Fecha Actualizado</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for rubro in rubros %}
